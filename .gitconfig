[user]
	# Set your name and email
	name = Piotr Wiewiura
	email = piotr.wiewiura@gmail.com

[core]
	editor = vim
	autocrlf = input
	eol = lf

[init]
	defaultBranch = main

[pull]
	rebase = false

[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log --oneline --decorate --graph
	last = log -1 HEAD
	unstage = reset HEAD --
	visual = !gitk

[push]
	default = simple

[diff]
	tool = vimdiff

[merge]
	tool = vimdiff